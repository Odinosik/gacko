@model GACKO.Shared.Models.User.UserLoginForm
@{
    Layout = "_Layout"; ;
}

<link rel="stylesheet" href="~/css/user.css" />
@section scripts {
    <script src="~/js/user.js"></script>
}
<div class="container_form">
    <div class="card"></div>
    <div class="card">
        <h1 class="title">Login</h1>
        @if (!String.IsNullOrEmpty(Model?.LoginErrorMessage))
        {
            <div class="input-container">
                @Html.DisplayFor(model => model.LoginErrorMessage)
                <br />
            </div>
        }
        @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
        {
            <div class="input-container">
                @Html.EditorFor(model => model.Username)
                @Html.LabelFor(model => model.Username)
                @*@Html.ValidationMessageFor(model => model.Username)*@
                <div class="bar"></div>
            </div>
            <div class="input-container">
                @Html.EditorFor(model => model.Password)
                @Html.LabelFor(model => model.Password)
                @*@Html.ValidationMessageFor(model => model.Password)*@
                <div class="bar"></div>
            </div>
            <div class="button-container">
                <button><span>Go</span></button>
            </div>
            <div class="footer"><a href="#">Forgot your password?</a></div>
        }
    </div>
    <div class="card alt">
        <div class="toggle"></div>
        <h1 class="title">
            Register
            <div class="close"></div>
        </h1>
        @using (Html.BeginForm("Signup", "Login", FormMethod.Post))
        {
            <div class="input-container">
                @Html.EditorFor(model => model.Username)
                @Html.LabelFor(model => model.Username)
                <div class="bar"></div>
            </div>
            <div class="input-container">
                @Html.EditorFor(model => model.Password)
                @Html.LabelFor(model => model.Password)
                <div class="bar"></div>
            </div>
            <div class="input-container">
                <input type="#{type}" id="#{label}" required="required" />
                <label for="#{label}">Repeat Password</label>
                <div class="bar"></div>
            </div>
            <div class="button-container">
                <button><span>Next</span></button>
            </div>
        }
    </div>
</div>