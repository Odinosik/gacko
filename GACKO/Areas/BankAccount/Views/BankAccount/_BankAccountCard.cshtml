<div class="editbankacc-container" id="@($"bankacc{@Model.Id}")">
    <div class="editbankacc-card"></div>
    <div class="editbankacc-card">
        <h1 class="title_bank_acc">Bank account</h1>
        <div class="iban_bank_account">
            @Model.Iban
            <div class="bar"></div>
        </div>
        <div class="balance_bank_account">
            @Model.Balance.ToString("C0")
            <div class="bar"></div>
        </div>
        @using (Html.BeginForm("Index", "VirtualAccount", new { area = "VirtualAccount" }, FormMethod.Get))
        {
            <div class="input-container" style="display: none;">
                <input id="#{label}" required="required" name="bankAccId" value="@Model.Id" />
            </div>
            <div class="button-container">
                <button><span>Go</span></button>
            </div>
        }
    </div>
    <div class="editbankacc-card editbankacc-alt">
        <div class="toggle" id="@($"bankacc{@Model.Id}")"></div>
        <h1 class="title_bank_acc">
            Update bank account
            <div class="close" id="@($"bankacc{@Model.Id}")"></div>
            @using (Html.BeginForm("Delete", "BankAccount", new { area = "BankAccount" }, FormMethod.Get))
            {
                <div class="input-container" style="display: none;">
                    <input id="#{label}" required="required" name="bankAccountId" value="@Model.Id" />
                </div>
                <button class="bankacc-delete">
                </button>
            }
            <div></div>
        </h1>
        @using (Html.BeginForm("Update", "BankAccount", new { area = "BankAccount" }, FormMethod.Post))
        {
            <div class="input-container">
                <input type="text" id="#{label}" required="required" name="Name" value="@Model.Name" />
                <label for="#{label}">Name</label>
                <div class="bar"></div>
            </div>
            <div class="input-container">
                <input type="text" id="#{label}" required="required" name="Iban" value="@Model.Iban" />
                <label for="#{label}">IBAN</label>
                <div class="bar"></div>
            </div>
            <div class="input-container">
                <input type="text" id="#{label}" required="required" name="Balance" value="@Model.Balance" />
                <label for="#{label}">Balance</label>
                <div class="bar"></div>
            </div>
            <div class="input-container" style="display: none;">
                <input id="#{label}" required="required" name="bankAccId" value="@Model.Id" />
            </div>
            <div class="button-container">
                <button><span>Go</span></button>
            </div>
        }
    </div>
</div>
