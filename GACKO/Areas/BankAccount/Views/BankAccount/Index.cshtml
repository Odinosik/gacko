@using GACKO.Shared.Models.BankAccount
@model List<BankAccountModel>
@{
    Layout = "_Layout";
}

@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="~/js/bankacc.js"></script>
}

<div class="horizontal-container">
    @foreach (var bankAcc in Model)
    {
        @Html.Partial("_BankAccountCard", bankAcc)
    }

    <div class="newbankacc-container">
        <div class="newbankacc-card"></div>
        <div class="newbankacc-card">
            <h1 class="title_bank_acc">
                Add new account
            </h1>
            <div class="iban_bank_account">
                
                <div class="bar"></div>
            </div>
            <div class="balance_bank_account">
                
                <div class="bar"></div>
            </div>
        </div>
        <div class="newbankacc-card newbankacc-alt">
            <div class="toggle"></div>
            <h1 class="title_bank_acc">
                Add new account
                <div class="close"></div>
            </h1>
            @using (Html.BeginForm("Create", "BankAccount", new { area = "BankAccount" }, FormMethod.Post))
            {
                <div class="input-container">
                    <input type="#{type}" id="#{label}" required="required" name="Name" />
                    <label for="#{label}">Name</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input type="#{type}" id="#{label}" required="required" name="Iban" />
                    <label for="#{label}">IBAN</label>
                    <div class="bar"></div>
                </div>
                <div class="input-container">
                    <input type="#{type}" id="#{label}" required="required" name="Balance" />
                    <label for="#{label}">Balance</label>
                    <div class="bar"></div>
                </div>
                <div class="button-container">
                    <button><span>Go</span></button>
                </div>
            }
        </div>
    </div>
</div>